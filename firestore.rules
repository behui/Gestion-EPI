rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fonction helper pour vérifier si l'utilisateur est connecté
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Fonction helper pour récupérer le rôle de l'utilisateur
    // CORRECTION: Utilise l'email au lieu de uid car les documents users utilisent l'email comme ID
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.role;
    }
    
    // Fonction helper pour vérifier si l'utilisateur est admin
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    // Fonction helper pour vérifier si l'utilisateur est au moins un utilisateur standard
    function isUser() {
      return isAuthenticated() && (getUserRole() == 'utilisateur' || getUserRole() == 'admin');
    }
    
    // Collection des casiers - accessible en lecture/écriture pour tous les utilisateurs connectés
    match /casiers/{document=**} {
      allow read: if isUser();
      allow write: if isUser();
    }
    
    // Collection des utilisateurs - MODE TEMPORAIRE: Permet aux utilisateurs connectés de créer leur profil
    match /users/{userId} {
      // Les admins peuvent tout faire
      allow read, write: if isAdmin();
      
      // TEMPORAIRE: Un utilisateur connecté peut lire et créer son propre profil
      allow read: if isAuthenticated() && request.auth.token.email == userId;
      allow create: if isAuthenticated() && request.auth.token.email == userId;
    }
    
    // Collection de test (pour debug) - Réservée aux admins
    match /test/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Collection des équipements - accessible en lecture/écriture pour admins
    match /equipements/{document=**} {
      allow read: if isUser();
      allow write: if isAdmin();
    }
  }
}
